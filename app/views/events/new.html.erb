<h1>Create a New Event</h1>

<h1>New Post</h1>

<%= form_with model: @event do |form| %>
 

<div class="field">
    <%= form.label :title %>
    <%= form.text_field(:title) %>
</div><br><br>

<div class="field">
    <%= form.label :date %>
    <%= form.date_select(:date) %>
</div><br><br>

<div class="field">
    <%= form.label :location %>
    <%= form.text_field(:location) %>
</div><br><br>

<div class="field">
    <%= form.label :description %>
    <%= form.text_area(:description, size: "70x5") %>
</div><br><br>

<%= form.submit %>

<% end %>